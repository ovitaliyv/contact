<header class="row">
  <div class="span12">
    <div class="row">
      <div class="span3 locale_switcher">
      {{ locale_switcher() }}
      </div>
      <div>
      {% if app.user %}
        <a class="logout" href="{{ path('logout', {'_locale':app.request.locale}) }}"> (выход)</a> <span class="user_name">  <a class="logout" href="{{ path('currUser', {'_locale':app.request.locale}) }}">{{ app.user.username }} </a></span> 
      {% else %}
        <a class="login" href="{{ path('login', {'_locale':app.request.locale}) }}"> Вход</a>
      {% endif %}
      </div>
    </div>
      {% block header %}{% endblock %}
      {% include('::menu.html.twig') %}
  </div>
</header>
